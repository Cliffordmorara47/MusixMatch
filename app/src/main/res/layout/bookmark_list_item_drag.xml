<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/event_list_background"
    android:fadeScrollbars="true"
    android:orientation="horizontal"
    android:paddingBottom="30dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/bookmarkImageView"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:src="@drawable/upcoming" />

        <ImageView
            android:id="@+id/dragIcon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignLeft="@+id/eventImageView"
            android:layout_alignParentTop="@+id/eventImageView"
            android:gravity="bottom|left"
            android:src="@drawable/baseline_reorder_black_24dp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="15dp">

        <TextView
            android:id="@+id/eventNameView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/im_fell_english"
            android:text="Event Name"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/eventCategoryView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/im_fell_english"
            android:text="Category"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="11dp"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/eventCostView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:text="Cost"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textStyle="bold" />

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>